{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,                   
    "strict": true,                           
    "noImplicitAny": true,                 
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/*"
  ],
  "include": ["src/**/*"]
}